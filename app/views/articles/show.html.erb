<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-7">
        <h1>Have a look at <%= @article.title %></h1>
        <p><%= @article.description %></p>
        <%= cl_image_tag @article.photo, height: 300, width: 400, crop: :fill %>





    </div>

  </div>
        <% if policy(Article).create? %>
        <%= link_to "New article", new_article_path %>
        <% end %>


</div>

<!-- Adding a review -->
<div id="reviews">

  <h3>Reviews</h3>
  <% if @article.reviews.empty? %>
    <p>Be the first to let a review for: <strong><%= @article.title %></strong> </p>
    <% else %>
    <ul class="list-group">
      <% @article.reviews.each do |article| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
       <span class="badge badge-primary badge-pill">


       </span>
       <%= review.content %>
    </li>

 <% end %>

</ul>
  <% end %>


  <%= render "reviews/new", article: @article, review: @review %>







</div>
